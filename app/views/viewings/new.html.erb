<div>
  <h4>Viewings Set-up</h4>
</div>
  <br>
<div>
  <%= form_for(@viewing, html: { class: "form-horizontal", role: "form" }) do |f| %>
    <% if @viewing.errors.any? %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h3>
        <%= pluralize(@viewing.errors.count, "error") %> prohibited this movie from being saved:
      </h3>
      <ul>
        <% @viewing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.label :auditorium, class: "col-sm-2 control-label" %>
        <div class="col-sm-5">
          <select class="form-control" '<%= f.text_field :auditorium %>'>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
          </select>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :movie, class: "col-sm-2 control-label" %>
        <div class="col-sm-5">
          <select class="form-control" '<%= f.text_field :movie %>'>
           <% @movies.each do |movie| %>
            <option><%= movie.name %></option>
            <% end %>
          </select>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :showtime, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :view_time, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit class: "btn-sm btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<br>
