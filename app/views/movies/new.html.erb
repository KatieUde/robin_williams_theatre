

<%= form_for(@movie, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :omdb_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :omdb_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Omdb_Poster, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :omdb_poster, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
