
<div>
  <h3>Add & Edit Movies Playing</h3>
</div>
  <br>
<!-- MOVIE FORM ERROR MESSAGING -->

<div>
  <%= form_for(@movie, html: { class: "form-horizontal", role: "form" }) do |f| %>
    <% if @movie.errors.any? %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h3>
        <%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:
      </h3>
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-------------------------------------->
  <!-- FORM FOR NEW MOVIE CREATION ------->

    <div class="form-group">
      <%= f.label :movie_title, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :rated, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :rating, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :now_showing, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :playing_now, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :coming_soon, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :upcoming, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :movie_number, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :ombd_id, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :movie_poster, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :ombd_poster, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :official_trailer, class: "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.text_field :youtube, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>

<br>
<!-------------------------------------->
<!--- EDIT EXISTING MOVIES -------->

<div class="col-md-7" id="movie-list">
  <table class="table">
    <tbody>
      <tr>
        <th class="table_head">Movie Title</th>
        <th class="table_head">Rated</th>
        <th class="table_head">Update</th>
        <th class="table_head">Remove</th>
        </tr>
          <% @movies.each do |movie| %>
        <tr>
          <td class="table_body"><%= movie.name %></td>
          <td class="table_body"><%= movie.rating%></td>
            <td class="table_body">
              <%= link_to 'Edit', edit_movie_path(movie) %>
            </td>
            <td class="table_body">
              <%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Do you really want to remove this movie?' } %>
            </td>
      <% end %>
    </table>
  </div>
