<div id="update_ticket_details">
  <h3>Update Details for a <%= @ticket_detail.ticket_style %> Ticket</h3>

<br>
<br>

<div>
  <%= form_for(@ticket_detail, html: { class: "form-horizontal", role: "form" }) do |f| %>
    <% if @ticket_detail.errors.any? %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h3>
        <%= pluralize(@ticket_detail.errors.count, "error") %> prohibited this auditorium from being saved:
      </h3>
      <ul>
        <% @ticket_detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :id, class: "form-control" %>
  <div class="form-group">
    <%= f.label :ticket_type, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :ticket_style, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ticket_price, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
        <%= f.text_field :ticket_cost, class: "form-control" %>
      </div>
    </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>
</div>
